 # Maintainer: Norcux OS Team

pkgname=norcuxos-welcome-screen
pkgver=0.1
pkgrel=3
pkgdesc="The NorcuxOS Welcome Screen"
arch=('any')
url="https://github.com/NorcuxOS/welcome-screen"
license=('GPL3')
depends=('qt5-base' 'kio')
#makedepends=()
#checkdepends=()
#optdepends=()
#options=()
source=("${url}/archive/$pkgver.tar.gz" "${url}/releases/download/$pkgver/welcome-screen.tar.gz")
md5sums=('SKIP' 'SKIP')
validpgpkeys=()


package() {
    mkdir -p ${pkgdir}/usr/bin/ ${pkgdir}/usr/share/applications/ ${pkgdir}/etc/skel/.config/autostart/
    cp -r "${srcdir}/welcome-screen" "${pkgdir}/usr/bin/"
    cp -r "${srcdir}/welcome-screen-${pkgver}/welcome-screen.desktop" "${pkgdir}/usr/share/applications/"
    cp -r "${srcdir}/welcome-screen-${pkgver}/welcome-screen.desktop" "${pkgdir}/etc/skel/.config/autostart/"
}
