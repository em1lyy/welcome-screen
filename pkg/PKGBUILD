# Maintainer: Norcux OS Team

pkgname=norcuxos-welcome-screen
pkgver=0.2
pkgrel=1
pkgdesc="The NorcuxOS Welcome Screen"
arch=('x86_64')
url="https://github.com/NorcuxOS/welcome-screen"
license=('GPL3')
depends=('qt5-base' 'kio')
makedepends=(gcc make)
source=("${url}/archive/$pkgver.tar.gz")
md5sums=('SKIP')
validpgpkeys=()


build() {
	mkdir -p "$srcdir/welcome-screen-$pkgver/build"
	cd "$srcdir/welcome-screen-$pkgver/build"
	qmake ../welcome-screen.pro -spec linux-g++ && /usr/bin/make qmake_all
	make
}

package() {
	cd "$srcdir/welcome-screen-$pkgver/build"
	make INSTALL_ROOT="$pkgdir" install
}
